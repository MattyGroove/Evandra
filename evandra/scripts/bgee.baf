// Romance Kills

IF
  OR(2)
  Global("rh#EvaRomanceActive","GLOBAL",1)
  Global("rh#EvaRomanceActive","GLOBAL",2)
  OR(2)
    Global("NeeraRomanceActive","GLOBAL",2)
    Global("DornRomanceActive","GLOBAL",2)
THEN
  RESPONSE #100
    SetGlobal("rh#EvaRomanceActive","GLOBAL",3)
END

IF
  Global("rh#EvaRomanceActive","GLOBAL",2)
